{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "minimumReleaseAge": "7 days",
  "includePaths": [
    ".ruby-version",
    "Gemfile",
    "Gemfile.lint",
    "shoryuken.gemspec",
    "spec/gemfiles/**",
    "spec/integration/**/Gemfile",
    ".github/workflows/**"
  ],
  "github-actions": {
    "enabled": true,
    "pinDigests": true
  },
  "bundler": {
    "enabled": true,
    "managerFilePatterns": [
      "/(^|/)Gemfile$/",
      "/(^|/)Gemfile\\.lint$/",
      "/\\.gemfile$/",
      "/(^|/)gems\\.rb$/",
      "/spec/gemfiles/.+\\.gemfile$/",
      "/spec/integration/.*/Gemfile$/"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "bundler"
      ],
      "matchFileNames": [
        "spec/gemfiles/**"
      ],
      "groupName": "Rails test dependencies",
      "description": "Group Rails version-specific test Gemfiles together"
    },
    {
      "matchManagers": [
        "bundler"
      ],
      "matchFileNames": [
        "spec/integration/**/Gemfile"
      ],
      "groupName": "Integration test dependencies",
      "description": "Group integration test Gemfiles together"
    },
    {
      "description": "Group ruby/setup-ruby action with ruby version updates",
      "matchPackageNames": [
        "ruby/setup-ruby",
        "ruby"
      ],
      "groupName": "ruby setup"
    }
  ]
}
